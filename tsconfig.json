{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src/js",
    "strict": true,
    "strictPropertyInitialization": true,
    "baseUrl": "./",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "lib":["ES6","ES5","dom"],
    "jsx": "react",
    "allowJs": true,
    "types": ["p5"],
    "typeRoots": ["node_modules/@types"],
  },
  "exclude": ["./webpack.config.js","./dist", "node_modules", "**/node_modules/*","./zoldfiles"]
}
